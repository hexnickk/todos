{
    "name": "kozlovzxc-todo-app",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "apps/**"
    ],
    "dependencies": {
        "babel-eslint": "^10.1.0",
        "eslint": "^7.27.0",
        "typescript": "^4.3.2"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.26.0",
        "@typescript-eslint/parser": "^4.26.0",
        "eslint-config-prettier": "^8.3.0",
        "prettier": "^2.3.0"
    },
    "scripts": {
        "lint:ts": "eslint '**/*.{js,ts,tsx}' && prettier -c '**/*.{js,ts,tsx}'",
        "lint:ts:fix": "eslint --fix '**/*.{js,ts,tsx}' && prettier -c -w '**/*.{js,ts,tsx}'",
        "lint:html": "prettier -c '**/*.html'",
        "lint:html:fix": "prettier -c -w '**/*.html'",
        "lint": "yarn lint:ts && yarn lint:html",
        "lint:fix": "yarn lint:ts:fix && yarn lint:html:fix",
        "web": "yarn --cwd apps/web",
        "web:start": "yarn web start",
        "web:build": "yarn web build",
        "web-e2e": "yarn --cwd apps/web-e2e",
        "web-e2e:start": "yarn web-e2e start",
        "web-e2e:open": "yarn web-e2e open"
    }
}
